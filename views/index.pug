extends layout

block content
  h1 Login
  form(action='/login', method='post')
    .table-responsive
      .table
        tr
          td
            .form-group
                | <strong>User Name</strong>
                input(
                  class= 'form-control'
                  type= 'text'
                  name= 'username'
                  value= ''
                )
          tr
            td
              .form-group
                  <strong>Password</strong>
                  input(
                    class= 'form-control'
                    type= 'password'
                    name= 'password'
                    value= ''
                  )
          tr
            td
              .form-group
                  input(
                    type= 'submit'
                    class= 'btn btn-default'
                    value= 'Logon'
                  )