extends layout

block content

    -var columns=8
    -var hello = 'Hello ' + username        

    h1= title
    h4= hello
    
    body
    nav
      ul
        li 
            span(class='glyphicon glyphicon-plus')
            = ' '
            a(href='/list/new') New Place
        li 
            span(class='glyphicon glyphicon-log-out')
            = '  '
            a(href='/logout') Logout    
    .table-responsive
        table(
            id='sort',
            class='table table-bordered table-striped'
        )
            thead
                tr
                    th(
                        class='no-sort'
                    ) Actions
                    th Name
                    th(
                        data-sort-method='number',
                        style="text-align:center"
                    ) Sara's Rating
                    th(
                        data-sort-method='number',
                        style="text-align:center"
                    ) Todd's Rating
                    th Created By
                    th Updated By
                    th Date Added
                    th Date Updated
            tbody
                each place in places
                    tr
                        td
                            span(
                                class='glyphicon glyphicon-pencil'
                            )
                            =' '
                            a(
                                href='/list/edit/' + place._id
                            ) Edit
                            = '  '
                            span(
                                class='glyphicon glyphicon-remove'
                            )
                            = ' '
                            a(
                                href='/list/delete/' + place._id
                            ) Delete
                        td= place.name
                        td(
                            align='center'
                        )= place.saraRating
                        td(
                            align='center'
                        )= place.toddRating
                        td= place.createdBy
                        td= place.updatedBy
                        td= moment(place.createdDate).format('MM/DD/YYYY h:mm a')
                        td= place.updatedDate ? moment(place.updatedDate).format('MM/DD/YYYY h:mm a') : ''
                else
                    tr
                        td(colspan=columns) No Current Places

    script(src='/javascripts/tablesort.min.js')
    script(src='/javascripts/tablesort.number.js')
    script.
        new Tablesort(document.getElementById('sort'));
